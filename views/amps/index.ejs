<%  include ../partials/header %>

  <div class="container">
    <header class="jumbotron">
      <div class="container">
        <h1>Welcome to AMP</h1>
        <p>View all amps throughout the country</p>
        <p>
          <a class="btn btn-primary btn-lg" href="/amps/new">Add new amp</a>
        </p>
      </div>
    </header>

    <div class="row">
      <div class="col-lg-12">
        <h3>Most popular amps</h3>
      </div>
    </div>

    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
      <% amps.forEach(function(amp){ %>
        <div class="col-md-3" "col-sm-6">
          <div class="thumbnail">
            <img src="<%= amp.image %>">
            <div class="caption">
              <h4><%= amp.name %></h4>
            </div>
            <p>
              <a href="/amps/<%= amp._id %>" class="btn btn-primary">More Info</a>
            </p>
          </div>
        </div>
      <% }); %>
    </div>

  </div>

<% include ../partials/footer %>
