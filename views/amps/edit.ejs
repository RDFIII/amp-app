<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit <%= amp.name %></h1>

    <div style="width: 30%; margin: 25px auto">
      <form action="/amps/<%= amp._id %>/?_method=PUT" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="amp[name]" value="<%= amp.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="number" name="amp[price]" value="<%= amp.price %>" min="1.00" step="1">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="amp[image]" placeholder="<%= amp.image %>">
        </div>
        <div class="form-group">
          <input class="form-control" type="text" name="amp[description]" placeholder="<%= amp.description %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-default btn-block">Submit</button>
        </div>
      </form>
      <a href="/amps">Back</a>
    </div>

  </div>
</div>

<% include ../partials/footer %>
