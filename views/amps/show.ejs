<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Amps!!!!!</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= amp.image %>">
                <div class="caption">
                    <h4 class="pull-right">$50.00</h4>
                    <h4><a><%=amp.name%></a></h4>
                    <p><em>Submitted by <%= amp.author.username %></em></p>
                    <a class="btn btn-warning btn-xs" href="/amps/<%= amp._id %>/edit">Edit</a>
                    <form id="delete-form" action="/amps/<%= amp._id %>?_method=DELETE" method="POST">
                      <button class="btn btn-danger btn-xs">Delete</button>
                    </form>
                    <p><%= amp.description %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/amps/<%= amp._id %>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <% amp.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 days ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>
